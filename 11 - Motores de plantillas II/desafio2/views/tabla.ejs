
<div class="table-responsive">
    <% if (typeof personas !== 'undefined') { %>
        <table class="table table-dark">
            <tr style="color: yellow;">
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Edad</th>
            </tr>
            <%personas.forEach(function(persona) {%>
                <tr>
                    <td>
                        <%=persona.nombre%>
                    </td>
                    <td>
                        <%=persona.apellido%>
                    </td>
                    <td>
                        <%=persona.edad%>
                    </td>
                </tr>
                <%});%>
        </table>
    <% }else { %>
        <h3 class="alert alert-danger">no se encontraron datos</h1>
    <% } %>

</div>